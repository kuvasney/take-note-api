{
  "name": "notes-api",
  "version": "1.0.0",
  "description": "REST API for Notes application using Express, MongoDB and TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --fix --ext .ts,.js",
    "test": "jest",
    "migrate:encrypt": "tsx scripts/encrypt-existing-notes.ts",
    "migrate:public-fields": "tsx scripts/add-public-fields.ts",
    "migrate:share-tokens": "tsx scripts/fix-missing-share-tokens.ts",
    "check:passwords": "tsx scripts/check-password-hashes.ts",
    "fix:encryption": "tsx scripts/fix-encryption-issues.ts"
  },
  "keywords": [
    "notes",
    "api",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
