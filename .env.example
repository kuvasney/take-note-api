# Environment Configuration
NODE_ENV=development
PORT=3001

# For local development
MONGODB_URI=mongodb://localhost:27017/your-db-name

# For production (Vercel) - Use MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# For production, set to your custom domain
# CORS_ORIGIN=https://domain.com
# FRONTEND_URL=https://domain.com
# Or if using Vercel:
# CORS_ORIGIN=https://your-app.vercel.app
# FRONTEND_URL=https://your-app.vercel.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
# CRITICAL: Use a strong random key in production (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-change-in-production-must-be-strong-minimum-32-chars

# Email Configuration (SMTP)
# For development, leave empty to use Ethereal Email (test emails)
# For production, use your email service (Gmail, SendGrid, AWS SES, etc.)

# Gmail example:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM="Your App Name <noreply@yourapp.com>"

# SendGrid example:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_FROM="Your App Name <noreply@yourapp.com>"

SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=